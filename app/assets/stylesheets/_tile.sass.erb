.tile
  display: block
  width: $tile-size
  height: $tile-size
  color: black
  border-radius: $tile-size * 0.15

  background-image: image-url("tiles/back.svg")
  background-size: $tile-size $tile-size

  <% Mahjong::TILE_KINDS.each.with_index do |kind, i| %>
  &[data-tile="<%= kind %>"]
    background-image: image-url("tiles/<%= kind %>.svg")
  <% end %>

  &[data-discardable=true]:hover
    border: solid 1px red
